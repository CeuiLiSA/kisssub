<?xml version="1.0" encoding="utf-8"?>
<com.gcssloop.widget.RCRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:tag="@string/ignore_view"
    app:round_corner="2dp">

    <star.iota.kisssub.widget.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/image_view_photo_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/image_view_select_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/ic_circle"
            android:clickable="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_photo_selector_selected_button"
            tools:ignore="ContentDescription" />
    </star.iota.kisssub.widget.SquareRelativeLayout>
</com.gcssloop.widget.RCRelativeLayout>